<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/back2"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity">


    <RelativeLayout
        android:id="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/player1Avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_column="0"
            android:layout_row="0"
            android:scaleType="fitXY"
            android:src="@mipmap/a1" />

        <TextView
            android:id="@+id/player1Name"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_centerVertical="true"
            android:layout_column="3"
            android:layout_row="0"
            android:layout_toEndOf="@+id/player1Avatar"
            android:gravity="left"
            android:lines="2"
            android:maxLength="20"
            android:maxLines="2"
            android:text="None \nLevel 1" />

        <ImageView
            android:id="@+id/player1Color"
            android:layout_width="30dp"
            android:layout_height="30dp"

            android:layout_alignBottom="@+id/settingButton"
            android:layout_centerHorizontal="true"
            android:layout_column="4"
            android:layout_gravity="bottom"
            android:layout_row="0"
            android:scaleType="fitXY"
            android:src="@mipmap/white" />

        <ImageButton
            android:id="@+id/settingButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_column="6"
            android:layout_marginEnd="12dp"
            android:layout_row="0"
            android:background="@null"
            android:scaleType="fitXY"
            android:src="@mipmap/setting" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="2dp"
        android:layout_marginRight="2dp"
        android:layout_weight="1"
        android:background="@mipmap/b2"
        android:orientation="horizontal"
        android:scaleType="fitCenter">

        <com.seaguest.game.chessboard.ChessBoard
            android:id="@+id/chessboard"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="15dp"
            android:background="@mipmap/b5"
            android:scaleType="fitCenter"
            android:textColor="#FFFFFF" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageButton
            android:id="@+id/startButton"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_column="3"

            android:layout_marginStart="13dp"
            android:layout_row="0"

            android:background="@null"
            android:onClick="newGame"
            android:scaleType="fitXY"
            android:src="@mipmap/start" />

        <ImageButton
            android:id="@+id/player2Avatar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentEnd="true"
            android:layout_alignTop="@+id/startButton"
            android:layout_column="7"
            android:layout_gravity="right|center_vertical"
            android:layout_row="0"
            android:layout_x="258dp"
            android:layout_y="0dp"
            android:scaleType="fitXY"
            android:src="@mipmap/a2" />

        <TextView
            android:id="@+id/player2Name"
            android:layout_width="142dp"
            android:layout_height="43dp"
            android:layout_centerVertical="true"
            android:layout_column="6"
            android:layout_gravity="center"
            android:layout_row="0"
            android:layout_toStartOf="@+id/player2Avatar"
            android:layout_x="109dp"
            android:layout_y="11dp"
            android:gravity="right"
            android:lines="2"
            android:maxLength="20"
            android:maxLines="2"
            android:text="spider \n Level 1" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@+id/startButton"
            android:layout_centerHorizontal="true"
            android:layout_column="4"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_row="0"
            android:layout_x="214dp"
            android:layout_y="63dp"
            android:scaleType="fitXY"
            android:src="@mipmap/black" />


    </RelativeLayout>


</LinearLayout>
